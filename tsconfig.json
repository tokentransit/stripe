{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    //    "noUnusedLocals": true,
    //    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "target": "es2020",
    "baseUrl": ".",
    "rootDir": "src"
  },
  "include": [
    "src/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
